pipeline {
    agent any
    
   
     
    stages {
      stage('checkout') {
           steps {
             
                git branch: 'master', url: 'https://github.com/akhiljosef/CI-usingAnsible.git'
             
          }
        }
       stage('Ansible Init') {
            steps {
              sh 'ansible --version'
            }
       }
       stage('Execute Maven') {
           steps {
             
                sh 'mvn package'             
          }
        }
        stage('Ansible Deploy') {
             
            steps {
                 
             
               
               sh "ansible-playbook ansible.yml -i inventories/dev/hosts -u root --key-file .ssh/id_rsa.pub" 
               
            
            }
        }

    }
}